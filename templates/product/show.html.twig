<br><br><br>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-5">
<br>
    <a href="{{ path('product_edit', {'id': product.id}) }}" class="listboutshow">Modifier</a>
    </div>
    <div class="col-md-5"> <a href="{{ path('product_index', {'store': app.user.store.id}) }}" class="btn listprod">Liste produit</a></div>
    <div class="col-md-1"></div>
    </div>
    <br><br><br>

    <h1>Suggestions</h1>
    <table class="table">
        <thead>
        <tr>
       
            <th>Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
        </thead>
        <tbody id="body">
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.quantity }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.image }}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

