{% extends 'base3.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>
    <br><br>
    <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="cadreInformationsPara">
    
    <table class="table">
        <tbody>
           
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Déscription</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
          
                <td>
            
                <img src="{{ asset('uploads/images/' ~ product.image) }}" width="300"></td>
            </tr>
        </tbody>
    </table>
    </div></div></div>

