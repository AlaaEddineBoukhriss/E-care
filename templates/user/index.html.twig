<div class="container contact-form">
    <div class="contact-image">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact"/>
    </div>

    <style>
        body{

        .contact-form{
            background: #fff;
            margin-top: 10%;
            margin-bottom: 5%;
            width: 70%;
            align-content: center;
        }
        .contact-form .form-control{
            border-radius:1rem;
            align-content: center;
        }
        .contact-image{
            text-align: center;
        }
        .contact-image img{
            border-radius: 6rem;
            width: 11%;
            margin-top: -5%;
            transform: rotate(29deg);
        }
        .contact-form form{
            padding: 35px;

        }
        .contact-form form .row{
            margin-bottom: -7%;
            text-align: center;
        }
        .contact-form h3{
            margin-bottom: 8%;
            margin-top: -50%;
            text-align: center;
            color: #0062cc;
        }
        .contact-form .btnContact {
            width: 50%;
            border: none;
            border-radius: 1rem;
            padding: 25%;
            background: #dc3545;
            font-weight: 600;
            color: #fff;
            cursor: pointer;

        }

        </style>

    {% block title %}User index{% endblock %}

    {% block body %}
        <h1>User index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Cin</th>
                <th>Sexe</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Num_tel</th>
                <th>Email</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.login }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.cin }}</td>
                    <td>{{ user.sexe }}</td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>{{ user.adresse }}</td>
                    <td>{{ user.numTel }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="13">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('user_new') }}">Create new</a>
    {% endblock %}



