{% extends 'base2.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
    <h1>Patient index</h1>

    <table class="table" border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Cin</th>
                <th>Adresse</th>
                <th>Num_tel</th>
                <th>Mdp</th>
                <th>Taille</th>
                <th>Poids</th>
                <th>Maladie_chro</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.nom }}</td>
                <td>{{ patient.prenom }}</td>
                <td>{{ patient.cin }}</td>
                <td>{{ patient.adresse }}</td>
                <td>{{ patient.numTel }}</td>
                <td>{{ patient.mdp }}</td>
                <td>{{ patient.taille }}</td>
                <td>{{ patient.poids }}</td>
                <td>{{ patient.maladieChro }}</td>
                <td>{{ include('patient/_delete_form.html.twig') }}</td>


            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
