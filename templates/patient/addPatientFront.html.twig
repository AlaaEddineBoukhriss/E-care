        <h2>Ajouter un Patient</h2>

    {{ form_start(formPatient1,{'attr':{'novalidate' : 'novalidate'}}) }}

    {{ form_errors(formPatient1.name)}}
        {{ form_label(formPatient1.name,"Nom Patient") }}
        {{ form_widget(formPatient1.name,{'attr': {'class': 'form-control'}}) }}

{{ form_errors(formPatient1.email)}}
        {{ form_label(formPatient1.email,"Adresse Email") }}
        {{ form_widget(formPatient1.email,{'attr': {'class': 'form-control'}}) }}

{{ form_errors(formPatient1.phone)}}
