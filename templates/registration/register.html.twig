<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">


    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">Register</h4>


            <p class="divider-text">
            </p>
            <form>
                {% block body %}
                    {% for flashError in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}
                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.login) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.cin) }}
                    {{ form_row(registrationForm.sexe) }}
                    {{ form_row(registrationForm.nom) }}
                    {{ form_row(registrationForm.prenom) }}
                    {{ form_row(registrationForm.adresse) }}
                    {{ form_row(registrationForm.numTel) }}
                    {{ form_row(registrationForm.email) }}



                    {{ form_row(registrationForm.agreeTerms) }}

                    {{ form_row(registrationForm.captchaCode) }}
                    <button type="submit" class="btn">Register</button>
                    {{ form_end(registrationForm) }}
                {% endblock %}
            </form>
            <span class="bg-light">OR</span>

            <p>
                <a href="" class="btn btn-block btn-facebook"> <i class="fab fa-facebook-f"></i> Â  Login via facebook</a>
            </p>
        </article>
    </div> <!-- card.// -->

</div>
