{% block body %}

<div class="container mb-4">
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <input type="text" id="search" name="search" class="form-control" placeholder="Search">
                <script src="{{ asset('js/jquery.min.js') }}"></script>

                <table id="tableac" class="table table-striped table-advance table-hover">

                    <thead>
                    <tr>
                        <th scope="col"> </th>
                        <th scope="col">Code123Ã¹222</th>
                        <th scope="col">id </th>
                        <th scope="col">Quantite</th>
                        <th scope="col">Prix</th>
                        <th> </th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for panier in paniers %}
                    <tr>
                        <td><img src="https://dummyimage.com/50x50/55595c/fff" /> </td>
                        <td>{{ panier.CodePanier }}</td>
                        <td>{{ panier.id }}</td>
                        <td>{{ panier.Quantite }}</td>
                        <td>{{ panier.PrixTot }}</td>
                        <td class="text-right"><button class="btn btn-sm btn-danger"><a href="{{ path('panier_delete',{'id':panier.id})}}"><i class="fa fa-trash"></i> </button> </td>
                        <td class="text-right"><button class="btn btn-sm btn-info"><a href="{{ path('panier_show',{'id':panier.id})}}"><i class="fa fa-share"></i> </button> </td>
                        <td class="text-right"><button class="btn btn-sm btn-warning"><a href="{{ path('panier_edit',{'id':panier.id})}}"><i class="fa fa-edit"></i> </button> </td>
                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    <script>
                        $(document).ready(function(){
                            $('#search').keyup(function(){
                                search_table($(this).val());
                            });
                            function search_table(value){
                                $('#tableac tbody tr').each(function(){
                                    var found = 'false';
                                    $(this).each(function(){
                                        if($(this).text().toLowerCase().indexOf(value.toLowerCase()) >= 0)
                                        {
                                            found = 'true';
                                        }
                                    });
                                    if(found == 'true')
                                    {
                                        $(this).show();

                                    }
                                    else
                                    {
                                        $(this).hide();

                                    }
                                });
                            }
                        });
                    </script>

              {% endblock %}

