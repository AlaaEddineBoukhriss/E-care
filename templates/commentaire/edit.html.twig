<div class="container contact-form">
    <div class="contact-image">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact"/>
    </div>

<style>
    body{
        background: -webkit-linear-gradient(left, #0072ff, #00c6ff);
    }
    .contact-form{
        background: #fff;
        margin-top: 10%;
        margin-bottom: 5%;
        width: 70%;
    }
    .contact-form .form-control{
        border-radius:1rem;
        align-content: center;
    }
    .contact-image{
        text-align: center;
    }
    .contact-image img{
        border-radius: 6rem;
        width: 11%;
        margin-top: -5%;
        transform: rotate(29deg);
    }
    .contact-form form{
        padding: 35px;

    }
    .contact-form form .row{
        margin-bottom: -7%;
        text-align: center;
    }
    .contact-form h3{
        margin-bottom: 8%;
        margin-top: -50%;
        text-align: center;
        color: #0062cc;
    }
    .contact-form .btnContact {
        width: 50%;
        border: none;
        border-radius: 1rem;
        padding: 25%;
        background: #dc3545;
        font-weight: 600;
        color: #fff;
        cursor: pointer;

    }
    .btnContactSubmit

</style>


<form method="post">

    {% block body %}

    <BODY>
    <P><FONT color="#00a4e4"><b>Publication</b></FONT>
        <br />
        <br />
        <br />

        {% for message in app.flashes('info')  %}
            <div class="alert-warning">
                {{ message }}
            </div>
        {% endfor %}
    <table >
        {{ include('commentaire/_form.html.twig', {'button_label': 'Update'}) }}
        <br />
        <br />
    <a href="{{ path('commentaire_index') }}"><button class="btn">{{ button_label|default('Back to list ') }}</button> </a>
        <br />
        <br />
        {{ include('commentaire/_delete_form.html.twig') }}
        <br />
        <br />
    </table>
    {% endblock %}

</form>
</div>


